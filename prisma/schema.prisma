// Prisma schema for San Anselmo Coop Auction

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// User account
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  username      String    @unique
  phone         String?
  passwordHash  String
  isAdmin       Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  bids          Bid[]
  donatedItems  Item[]    @relation("DonatedItems")
  wonItems      Item[]    @relation("WonItems")
  watchlist     Watchlist[]
  payments      Payment[]

  // NextAuth
  accounts      Account[]
  sessions      Session[]
}

// NextAuth Account
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// NextAuth Session
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// NextAuth Verification Token
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Auction Item
model Item {
  id              String      @id @default(cuid())
  title           String
  description     String      @db.Text
  category        Category
  estimatedValue  Float?
  startingBid     Float
  buyNowPrice     Float?
  currentBid      Float?
  isFeatured      Boolean     @default(false)
  status          ItemStatus  @default(PENDING)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Donor info
  donorId         String
  donor           User        @relation("DonatedItems", fields: [donorId], references: [id])
  donorName       String?     // For admin-added items on behalf of someone

  // Winner info (after auction ends)
  winnerId        String?
  winner          User?       @relation("WonItems", fields: [winnerId], references: [id])

  // Relations
  photos          Photo[]
  bids            Bid[]
  watchlist       Watchlist[]
  payment         Payment?
}

// Item Categories
enum Category {
  EXPERIENCES
  GIFT_CARDS
  HOME_HOUSEHOLD
  SERVICES
  HANDMADE
  ART
  FOOD_DINING
  SPORTS
  KIDS
  OTHER
}

// Item Status
enum ItemStatus {
  PENDING     // Waiting for admin approval
  APPROVED    // Approved and visible in auction
  REJECTED    // Rejected by admin
  SOLD        // Auction ended, has winner
  UNSOLD      // Auction ended, no winner
}

// Item Photos
model Photo {
  id        String   @id @default(cuid())
  url       String
  itemId    String
  item      Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  order     Int      @default(0)
  createdAt DateTime @default(now())
}

// Bid
model Bid {
  id        String   @id @default(cuid())
  amount    Float
  createdAt DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  itemId    String
  item      Item     @relation(fields: [itemId], references: [id])
}

// Watchlist (favorites)
model Watchlist {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  itemId    String
  item      Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, itemId])
}

// Payment
model Payment {
  id            String        @id @default(cuid())
  amount        Float
  method        PaymentMethod
  status        PaymentStatus @default(PENDING)
  stripeId      String?       // Stripe payment intent ID
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  userId        String
  user          User          @relation(fields: [userId], references: [id])
  
  itemId        String        @unique
  item          Item          @relation(fields: [itemId], references: [id])
}

enum PaymentMethod {
  STRIPE
  CHECK
}

enum PaymentStatus {
  PENDING       // Awaiting payment
  COMPLETED     // Payment received
  FAILED        // Payment failed
}

// Auction Settings
model AuctionSettings {
  id                    String    @id @default(cuid())
  auctionEndTime        DateTime?
  antiSnipingMinutes    Int       @default(2)
  minBidIncrement       Float     @default(10)
  checkPayableTo        String    @default("San Anselmo Cooperative Nursery School")
  checkMailingAddress   String    @default("24 Myrtle Lane, San Anselmo, CA 94960")
  checkDeadlineDays     Int       @default(14)
  pickupLocation        String    @default("San Anselmo Cooperative Nursery School, 24 Myrtle Lane, San Anselmo, CA 94960")
  pickupInstructions    String?   @db.Text
  mailingAvailable      Boolean   @default(true)
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
}
